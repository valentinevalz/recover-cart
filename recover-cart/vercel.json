{
  "version": 2,
  "framework": "nextjs",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "ignoreCommand": "git check-ignore **/*",
  "routes": [
    { "src": "/(.*)", "dest": "/" }
  ]
}